---
interface Props {
    href: string;
    text: string;
    variant?: 'primary' | 'secondary';
    isDownload?: boolean;
}

const {href, text, variant="primary", isDownload} = Astro.props;
---

{isDownload &&
    <a href={href} class={`button-link ${variant}`}  download>{text}</a>
    }

{!isDownload &&
    <a href={href} class={`button-link ${variant}`} >{text}</a>
    }

<style>
    .button-link {
        padding: 14px 32px;
        text-decoration: none;
        text-align: center;
        width: 230px;
    }

    .primary {
        background: var(--primary);
        color: white;
    }

    .secondary {
        background: white;
        color: var(--primary);
        border: 1px solid var(--primary);
    }
</style>